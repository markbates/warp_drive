<html>
  <head>
    <title><%= params[:controller] %> - <%= params[:action] %></title>
  </head>
  <body>
    <div id='toolbar'>
      <% if current_user -%>
        <%= link_to('logout', logout_url) %>
      <% else -%>
        <%= link_to('login', login_url) %> | <%= link_to('register', register_url) %>
      <% end -%>
    </div>
    
    <div id='notice'>
      <% if flash[:notice] -%>
        <%= flash[:notice] %>
      <% end -%>
    </div>
    
    <%= yield %>
    
  </body>
</html>